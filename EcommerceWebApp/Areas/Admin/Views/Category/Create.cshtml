
@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Crear Categoria</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">

                <!-- Aqui ponemos todas las validaciones

                <div asp-validation-summary="All"></div>
                -->
                <div class="form-floating py-2 col-12">
                   @*  <input asp-for="Name" class="form-control" placeholder="Romance" />
                    <label asp-for="Name" ></label> *@

                    <input asp-for="Name" class="form-control border-0 shadow" placeholder="Romance" />
                    <label asp-for="Name" class="ms-2"></label>
                    
                    
                    <!-- esto hace que aparesca el nobre tal cual del model
                                                                  no es necesario poner tipo typ=" text " ya que aqui toma la del modelo
                    -->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <input asp-for="DisplayOrder" class="form-control" placeholder="23" />
                    <label asp-for="DisplayOrder"></label> *@
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" placeholder="23" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Crear</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Regresar a la lista
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

