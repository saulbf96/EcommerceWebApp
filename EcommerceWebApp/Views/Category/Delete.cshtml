@using Ecommerce.Models
@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Eliminar Categoria</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
               

                @if (Model != null)
                {
                    <div class="form-floating py-2 col-12">
                        @*  <input asp-for="Name" class="form-control" placeholder="Romance" />
                    <label asp-for="Name" ></label> *@

                        <input asp-for="Name" disabled class="form-control border-0 shadow" placeholder="Romance" />
                        <label asp-for="Name" class="ms-2"></label>


                        <!-- esto hace que aparesca el nobre tal cual del model
                                                                      no es necesario poner tipo typ=" text " ya que aqui toma la del modelo
                        -->
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        @*  <input asp-for="Name" class="form-control" placeholder="Romance" />
                    <label asp-for="Name" ></label> *@

                        <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" placeholder="Romance" />
                        <label asp-for="DisplayOrder" class="ms-2"></label>


                        <!-- esto hace que aparesca el nobre tal cual del model
                                                                      no es necesario poner tipo typ=" text " ya que aqui toma la del modelo
                        -->
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <!-- Botón que abre el modal -->
                            <button type="submit" class="btn btn-danger form-control" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                                Eliminar
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                                Regresar a la lista
                            </a>
                        </div>
                    </div>
                }
            </div>
        </form>
    </div>
</div>


<!-- Scripts de validación ASP.NET -->
<partial name="_ValidationScriptsPartial" />

<!-- JS externo -->
<script src="~/js/CategoryDelete.js"></script>

